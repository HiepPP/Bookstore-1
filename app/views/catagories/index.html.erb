<h2>Categories</h2>

<table class="table table-striped">
	<tr>
		<th>Category Name</th>
		<th>Actions</th>
	</tr>
	<% @catagories.each do |catagory| %>
	<tr>
		<td><%= catagory.name %></td>
		<td><%= link_to 'Edit', edit_catagory_path(catagory.id) %> | <%= link_to 'Delete', catagory_path(catagory), method: :delete, data: {confirm: 'Are you sure?'} %></td>
	</tr>
	<% end %>
</table>