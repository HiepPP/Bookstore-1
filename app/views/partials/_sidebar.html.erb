<% if params[:controller] == 'about' %>
<div class="well">
	<h3>Location Info</h3>
	<ul>
		<li>The Bookstore</li>
		<li>200 University Ave W</li>
		<li>Waterloo, ON N2L 3G1</li>
		<li>Phone: (519) 888-4567</li>
	</ul>
</div>
<% end %>

<% if params[:controller] == 'books' && params[:action] == 'index' || params[:action] == 'show' %>
<div class="list-group">
	<% @catagories.each do |catagory| %>
	<%= link_to catagory.name, catagory_path(catagory.id), class:'list-group-item' %>
	<% end %>
</div>
<% end %>